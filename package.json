{
  "name": "ihook",
  "version": "0.0.3",
  "description": "Intelligent git hook: easy-to-use, powerful and programmable",
  "main": "index.js",
  "scripts": {
    "coverage": "istanbul cover ./node_modules/mocha/bin/_mocha -- --timeout 60000",
    "example-fail": "echo \"This is the example hook, I exit with 1\" && exit 1",
    "example-pass": "echo \"This is the example hook, I exit with 0\" && exit 0",
    "install": "node ./scripts/install/index.js",
    "lint": "eslint .",
    "test": "jest --silent",
    "ut": "./node_modules/.bin/mocha ./test/unit/index.js --timeout 60000",
    "rt": "./node_modules/.bin/mocha ./test/regression/index.js --timeout 60000",
    "rt-s": "./node_modules/.bin/mocha ./test/regression/index.js --timeout 60000 --not-delete-sandbox",
    "test-travis": "istanbul cover node_modules/.bin/_mocha --report lcovonly -- test.js",
    "uninstall": "node uninstall.js",
    "pce-install-foreach": "node ./node_modules/ihook/scripts/install-foreach.js",
    "pce-install-batch": "node ./node_modules/ihook/scripts/install-batch.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/Orange-J/ihook.git"
  },
  "keywords": [
    "git",
    "hooks",
    "npm",
    "pre-commit",
    "precommit",
    "run",
    "test",
    "development"
  ],
  "author": "OrangeJ <juhaotian@foxmail.com>",
  "homepage": "https://github.com/Orange-J/ihook",
  "license": "MIT",
  "dependencies": {
    "cross-spawn": "^5.0.1",
    "fs-extra": "^7.0.1",
    "please-upgrade-node": "^3.1.1",
    "spawn-sync": "^1.0.15",
    "which": "1.2.x"
  },
  "devDependencies": {
    "eslint": "^5.4.0",
    "ihook": "git://github.com/Orange-J/ihook.git",
    "istanbul": "0.4.x",
    "jest": "^23.6.0"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
